<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".requestMoney" >


<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/image_requestMoney_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="30dp"
        android:clickable="true"
        android:src="@drawable/profilepicture" />

    <TextView
        android:id="@+id/request_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Request Money"
        android:layout_marginBottom="35dp"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/request_receiverID"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="middle"
        android:hint="Sender's ID/E-mail /Ph. no."
        android:singleLine="true" />
    
        <EditText
        android:id="@+id/request_amount"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="middle"
        android:hint="Requested Amount"
        android:singleLine="true" />

	<EditText
        android:id="@+id/request_pin"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:ellipsize="middle"
        android:hint="PIN"
        android:singleLine="true" />
	
    <EditText
        android:id="@+id/request_comment"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ellipsize="middle"
        android:hint="Comments!"
        android:singleLine="true" />
    
    <Button android:id="@+id/request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Request"
        />
    
</LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backdrop_request"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/app_padding_left_right"
    android:paddingRight="@dimen/app_padding_left_right"
    android:paddingTop="@dimen/common_title_bar_height"
    tools:context=".requestMoney" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_box_height"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/request_image_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/header_image_request" />
    </LinearLayout>

    <EditText
        android:id="@+id/request_receiverID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/shape_edittext_intra_distance"
        android:layout_marginTop="@dimen/shape_edittext_intra_distance"
        android:background="@drawable/shape_edittext_final"
        android:hint="Sender&apos;s ID/E-mail /Ph. no."
        android:paddingBottom="@dimen/shape_edittext_padding_top_bottom"
        android:paddingLeft="@dimen/shape_edittext_padding_left_right"
        android:paddingRight="@dimen/shape_edittext_padding_left_right"
        android:paddingTop="@dimen/shape_edittext_padding_top_bottom"
        android:singleLine="true" />

    <EditText
        android:id="@+id/request_amount"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/shape_edittext_intra_distance"
        android:background="@drawable/shape_edittext_final"
        android:hint="Requested Amount"
        android:inputType="number"
        android:paddingBottom="@dimen/shape_edittext_padding_top_bottom"
        android:paddingLeft="@dimen/shape_edittext_padding_left_right"
        android:paddingRight="@dimen/shape_edittext_padding_left_right"
        android:paddingTop="@dimen/shape_edittext_padding_top_bottom"
        android:singleLine="true" />

    <EditText
        android:id="@+id/request_pin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/shape_edittext_intra_distance"
        android:background="@drawable/shape_edittext_final"
        android:hint="PIN"
        android:inputType="numberPassword"
        android:paddingBottom="@dimen/shape_edittext_padding_top_bottom"
        android:paddingLeft="@dimen/shape_edittext_padding_left_right"
        android:paddingRight="@dimen/shape_edittext_padding_left_right"
        android:paddingTop="@dimen/shape_edittext_padding_top_bottom"
        android:singleLine="true" />

    <EditText
        android:id="@+id/request_comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/shape_edittext_intra_distance"
        android:background="@drawable/shape_edittext_final"
        android:hint="Comments!"
        android:paddingBottom="@dimen/shape_edittext_padding_top_bottom"
        android:paddingLeft="@dimen/shape_edittext_padding_left_right"
        android:paddingRight="@dimen/shape_edittext_padding_left_right"
        android:paddingTop="@dimen/shape_edittext_padding_top_bottom"
        android:singleLine="true" />

    <Button
        android:id="@+id/request_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_edittext_final"
        android:text="Request" />

</LinearLayout>
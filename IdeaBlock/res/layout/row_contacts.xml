<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/app_padding_left_right"
    android:layout_marginRight="@dimen/app_padding_left_right"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/row_contacts_padding_top_bottom"
    android:paddingTop="@dimen/row_contacts_padding_top_bottom" >

    <FrameLayout
        android:id="@+id/contacts_default_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:foreground="@drawable/frame"
        android:padding="@dimen/app_profile_border_width"
        android:layout_marginRight="@dimen/row_contacts_elements_spacing" >

        <ImageView
            android:id="@+id/contacts_default_pic2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/default_profile_pic" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="top"
        android:layout_marginLeft="@dimen/row_contacts_elements_spacing"
        android:layout_marginRight="@dimen/row_contacts_elements_spacing"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/row_contacts_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/row_contacts_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID"
            android:textSize="15sp" />
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/row_contacts_elements_spacing"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/contacts_button_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/row_contacts_image_intra_distance"
            android:src="@drawable/button_send" />

        <ImageView
            android:id="@+id/contacts_button_request"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/row_contacts_image_intra_distance"
            android:src="@drawable/button_send" />
    </LinearLayout>

</LinearLayout>